
if [[ -n "${CTARGET}" && -n "${CHOST}" && "${CTARGET}" != "${CHOST}" ]]; then
	/* 
	 * We set the name of the more used tools to $CTARGET-$GNU_TOOL.
	 */
	: ${CC:=${CTARGET}-gcc}
	: ${CXX:=${CTARGET}-g++}
	: ${CPP:=${CTARGET}-cpp}
	: ${AS:=${CTARGET}-as}
	: ${AR:=${CTARGET}-ar}
	: ${LD:=${CTARGET}-ld}
	: ${NM:=${CTARGET}-nm}
	: ${RANLIB:=${CTARGET}-ranlib}
	: ${STRIP:=${CTARGET}-strip}
	export CROSS=yes
else
	export CROSS=no
fi

