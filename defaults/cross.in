
if [[ -n "${CHOST}" ]]; then
	/* 
	 * We set the name of the more used tools to $CHOST-$GNU_TOOL.
	 */
	: ${CC:=${CHOST}-gcc}
	: ${CXX:=${CHOST}-g++}
	: ${CPP:=${CHOST}-cpp}
	: ${AS:=${CHOST}-as}
	: ${AR:=${CHOST}-ar}
	: ${LD:=${CHOST}-ld}
	: ${NM:=${CHOST}-nm}
	: ${RANLIB:=${CHOST}-ranlib}
	: ${STRIP:=${CHOST}-strip}
	export CROSS=yes
else
	export CROSS=no
fi

