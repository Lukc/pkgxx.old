#
## Include for CMake
#
# Need $name, $version, $release and $source
# Can receive arguments from $cmake_opts and $make_opts
#

if [[ "$separate_build_dir" = "yes" ]]; then
	build() {
	cd $name-$version
		mkdir __build__
		cd __build__
		cmake -DPREFIX=/usr -DCMAKE_INSTALL_DIR=/usr ${cmake_opts[@]} ..
		pkgmake ${make_opts[@]}
		pkgmake DESTDIR=$PKG ${make_opts[@]} install
	}

else
	build() {
	cd $name-$version
		cmake -DPREFIX=/usr -DCMAKE_INSTALL_DIR=/usr ${cmake_opts[@]} .
		pkgmake ${make_opts[@]}
		pkgmake DESTDIR=$PKG ${make_opts[@]} install
	}
fi

