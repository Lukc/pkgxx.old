#
## Include for Python
#
# Need $name, $version, $release and $source
# Can receive arguments from $build_opts and $install_opts
#

case $version in
	devel|dev|trunk)
		: ${dirname:="$name"}
	;;
	*)
		: ${dirname:="$name-$version"}
	;;
esac

build() {
cd $dirname
	python setup.py build ${build_opts[@]} install --root=$PKG --prefix=$prefix ${install_opts[@]}
}

