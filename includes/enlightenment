#
## Include for softwares in the enlightenment repository.
#
# Need $name, $release and $source
# Can receive arguments from $e_name, $e_path, $autogen_opts and $make_opts
#

: ${e_name=$name}
: ${e_path=trunk/$e_name}

source=(${source[@]} svn:http://svn.enlightenment.org/svn/e/$e_path)
version=devel

autogen_opts=(
	# Compilation and cross-compilation parameters.
	${CBUILD:+--build=${CBUILD}}
	${CHOST:+--host=${CHOST}}
	${CTARGET:+--target=${CTARGET}}
	# Default directories.
	--prefix=$prefix
	--exec-prefix=$eprefix
	--bindir=$bindir
	--sbindir=$sbindir
	--libexecdir=$libexecdir
	--sysconfdir=$sysconfdir
	--localstatedir=$localstatedir
	--libdir=$libdir
	--datarootdir=$sharedir
	--mandir=$mandir
	# Anything special given in the Pkgfile.
	${autogen_opts[@]}
)

build()
{
cd $name
	./autogen.sh ${autogen_opts[@]}
	pkgmake ${make_opts[@]}
	pkgmake ${make_opts[@]} install DESTDIR=$PKG
}

