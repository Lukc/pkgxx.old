name=pkg++
version=@VERSION@
release=1
source=(http://lukc.upyum.com/downloads/$name-$version.tar.xz)

build(){
tar vxf $name-$version.tar.xz
	./configure --with-gtar --without-curl
	make DESTDIR=$PKG install
}

